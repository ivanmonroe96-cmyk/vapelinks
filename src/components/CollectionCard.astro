---
import fs from 'node:fs';
import path from 'node:path';
import productsRaw from '../data/products.json';
import disposableVapes from '../data/disposable-vapes.json';
const products = [...productsRaw, ...disposableVapes] as any[];

interface Props {
  collection: any;
}

const { collection } = Astro.props;

// Build a quick product lookup (cached across renders via module scope import)
const productMap: Record<string, any> = {};
for (const p of products) {
  productMap[p.handle] = p;
}

/**
 * Find a product image from the collection's own products.
 * Prefers local downloaded images, falls back to CDN src.
 */
function getProductFallbackImage(col: any): string | null {
  const handles: string[] = col.product_handles || [];
  for (const h of handles) {
    const p = productMap[h];
    if (!p?.images?.length) continue;
    // Check for local image first: public/images/products/{handle}_0.{ext}
    const src = p.images[0].src as string;
    const ext = path.extname(new URL(src).pathname);
    const localFile = `${h}_0${ext}`;
    const localPath = path.join('public', 'images', 'products', localFile);
    if (fs.existsSync(localPath)) {
      return `/images/products/${localFile}`;
    }
    // Fall back to CDN URL
    return src;
  }
  return null;
}

const imageSrc = collection.image?.local || collection.image?.src || getProductFallbackImage(collection) || '/images/placeholder-collection.svg';
const imageAlt = collection.image?.alt || collection.title;
---

<a href={`/collections/${collection.handle}`} class="collection-card">
  <div class="cc-image-wrap">
    <img
      src={imageSrc}
      alt={imageAlt}
      class="cc-image"
      loading="lazy"
      onerror="this.onerror=null;this.style.display='none'"
    />
  </div>
  <div class="cc-body">
    <div class="cc-info">
      <h3 class="cc-title">{collection.title}</h3>
      <span class="cc-count">{collection.products_count} products</span>
    </div>
    <div class="cc-arrow">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
    </div>
  </div>
</a>

<style>
  .collection-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    box-shadow: var(--shadow-card);
    transition: border-color 0.2s var(--ease-out), box-shadow 0.2s var(--ease-out), transform 0.2s var(--ease-out);
  }
  .collection-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-3px);
  }

  .cc-image-wrap {
    aspect-ratio: 16/9;
    background: linear-gradient(145deg, #f8fbff, #eef3fb);
    overflow: hidden;
  }
  .cc-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s var(--ease-out);
  }
  .collection-card:hover .cc-image {
    transform: scale(1.03);
  }
  .cc-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cc-body {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.05rem;
    gap: 0.75rem;
  }
  .cc-info { flex: 1; min-width: 0; }
  .cc-title {
    font-family: var(--font-display);
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.3;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .cc-count {
    display: block;
    font-size: 0.72rem;
    color: var(--color-text-muted);
    margin-top: 0.15rem;
    font-weight: 600;
  }
  .cc-arrow {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    border-radius: 10px;
    background: var(--color-surface-alt);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: all 0.15s ease;
  }
  .collection-card:hover .cc-arrow {
    background: var(--color-accent);
    color: #FFFFFF;
  }
</style>
