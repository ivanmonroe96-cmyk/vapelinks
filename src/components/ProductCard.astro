---
import { generateReviews } from '../utils/reviews.js';
import bestSellers from '../data/best-sellers.json';

const bestSellerSet = new Set(bestSellers);

interface Props {
  product: any;
}

const { product } = Astro.props;
const isBestSeller = bestSellerSet.has(product.handle);
const price = product.variants[0]?.price || '0.00';
const comparePrice = product.variants[0]?.compare_at_price;
const hasDiscount = comparePrice && parseFloat(comparePrice) > parseFloat(price);
const discountPercent = hasDiscount ? Math.round((1 - parseFloat(price) / parseFloat(comparePrice)) * 100) : 0;
const image = product.images[0];
const reviewData = generateReviews(product.handle);
---

<div class="product-card">
  <!-- Image Area -->
  <a href={`/products/${product.handle}`} class="card-img-anchor">
    <div class="card-image-wrap">
      {image ? (
        <img
          src={image.local}
          alt={image.alt || product.title}
          class="card-image"
          loading="lazy"
          onerror={`this.onerror=null;this.src='${image.src}'`}
        />
      ) : (
        <div class="card-image-placeholder">
          <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-dim)" stroke-width="1.2"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
        </div>
      )}
      {hasDiscount && (
        <span class="card-badge-sale">−{discountPercent}%</span>
      )}
      {isBestSeller && !hasDiscount && (
        <span class="card-badge-best">Best Seller</span>
      )}
      {isBestSeller && hasDiscount && (
        <span class="card-badge-best badge-best-secondary">Best Seller</span>
      )}
      <!-- Quick-add overlay -->
      <div class="card-overlay">
        <span class="card-overlay-hint">View Product</span>
      </div>
    </div>
  </a>

  <!-- Body -->
  <div class="card-body">
    {product.vendor && (
      <span class="card-vendor">{product.vendor}</span>
    )}
    <a href={`/products/${product.handle}`} class="card-title-link">
      <h3 class="card-title">{product.title}</h3>
    </a>
    <div class="card-price-row">
      <span class="card-price">${parseFloat(price).toFixed(2)}</span>
      <span class="card-currency">AUD</span>
      {hasDiscount && (
        <span class="card-compare">${parseFloat(comparePrice).toFixed(2)}</span>
      )}
    </div>
    <div class="card-meta-row">
      <div class="card-stars">
        {[1,2,3,4,5].map(s => (
          <svg class={`card-star ${s <= Math.round(reviewData.averageRating) ? 'star-filled' : 'star-empty'}`} width="11" height="11" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        ))}
        <span class="card-review-count">{reviewData.totalReviews}</span>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="card-footer">
    <button class="card-cart-btn" data-product={product.handle} data-title={product.title} data-price={price} data-image={image?.local || ''}>
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
      Add to Cart
    </button>
  </div>
</div>

<style>
  .product-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-card);
    transition:
      border-color 0.22s var(--ease-out),
      box-shadow   0.22s var(--ease-out),
      transform    0.22s var(--ease-out);
    will-change: transform;
  }
  .product-card:hover {
    border-color: rgba(22, 163, 74, 0.22);
    box-shadow: var(--shadow-md), 0 0 0 1px rgba(22,163,74,0.06);
    transform: translateY(-4px);
  }

  /* ── Image ── */
  .card-img-anchor {
    display: block;
    text-decoration: none;
    color: inherit;
    flex-shrink: 0;
  }
  .card-image-wrap {
    position: relative;
    aspect-ratio: 1;
    background: linear-gradient(145deg, #f0fdf4, #dcfce7);
    overflow: hidden;
  }
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 0.75rem;
    transition: transform 0.3s var(--ease-out);
  }
  .product-card:hover .card-image {
    transform: scale(1.05);
  }
  .card-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Sale badge */
  .card-badge-sale {
    position: absolute;
    top: 0.6rem;
    left: 0.6rem;
    padding: 0.2rem 0.55rem;
    font-family: var(--font-display);
    font-size: 0.63rem;
    font-weight: 800;
    color: #fff;
    background: var(--color-error);
    border-radius: var(--radius-full);
    letter-spacing: 0.02em;
    box-shadow: 0 2px 6px rgba(220,38,38,0.35);
  }

  /* Best seller badge */
  .card-badge-best {
    position: absolute;
    top: 0.6rem;
    left: 0.6rem;
    padding: 0.2rem 0.55rem;
    font-family: var(--font-display);
    font-size: 0.6rem;
    font-weight: 800;
    color: #fff;
    background: linear-gradient(135deg, #f59e0b, #d97706);
    border-radius: var(--radius-full);
    letter-spacing: 0.03em;
    box-shadow: 0 2px 6px rgba(245,158,11,0.4);
    z-index: 2;
  }
  /* When both sale + best seller, shift best seller to top-right */
  .badge-best-secondary {
    left: auto;
    right: 0.6rem;
  }

  /* Hover overlay */
  .card-overlay {
    position: absolute;
    inset: 0;
    background: rgba(13, 21, 38, 0.42);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.22s var(--ease-out);
    backdrop-filter: blur(2px);
  }
  .product-card:hover .card-overlay {
    opacity: 1;
  }
  .card-overlay-hint {
    font-family: var(--font-display);
    font-size: 0.78rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: 0.04em;
    padding: 0.5rem 1.25rem;
    background: rgba(255,255,255,0.14);
    border: 1.5px solid rgba(255,255,255,0.3);
    border-radius: var(--radius-full);
    backdrop-filter: blur(4px);
    transform: translateY(4px);
    transition: transform 0.22s var(--ease-out);
  }
  .product-card:hover .card-overlay-hint {
    transform: translateY(0);
  }

  /* ── Body ── */
  .card-body {
    flex: 1;
    padding: 0.85rem 0.95rem 0.65rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  .card-vendor {
    font-family: var(--font-display);
    font-size: 0.62rem;
    font-weight: 700;
    letter-spacing: 0.09em;
    text-transform: uppercase;
    color: var(--color-accent);
  }
  .card-title-link {
    text-decoration: none;
    color: inherit;
  }
  .card-title {
    font-family: var(--font-display);
    font-size: 0.84rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.35;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    letter-spacing: -0.01em;
    transition: color 0.15s;
  }
  .card-title-link:hover .card-title { color: var(--color-accent); }

  .card-price-row {
    display: flex;
    align-items: baseline;
    gap: 0.28rem;
    flex-wrap: wrap;
    margin-top: 0.1rem;
  }
  .card-price {
    font-family: var(--font-display);
    font-size: 1.08rem;
    font-weight: 800;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }
  .card-currency {
    font-size: 0.6rem;
    font-weight: 600;
    color: var(--color-text-muted);
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }
  .card-compare {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-decoration: line-through;
  }

  .card-meta-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.15rem;
  }
  .card-stars {
    display: flex;
    align-items: center;
    gap: 1px;
  }
  .card-star { flex-shrink: 0; }
  .star-filled { fill: var(--color-star); stroke: var(--color-star); }
  .star-empty  { fill: none; stroke: var(--color-border-hover); stroke-width: 1.5; }
  .card-review-count {
    font-size: 0.62rem;
    color: var(--color-text-muted);
    font-family: var(--font-display);
    font-weight: 600;
    padding-left: 0.2rem;
  }

  /* ── Footer ── */
  .card-footer {
    padding: 0.65rem 0.95rem 0.85rem;
  }
  .card-cart-btn {
    width: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.45rem;
    padding: 0.6rem 1rem;
    font-family: var(--font-display);
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--color-accent);
    background: var(--color-accent-soft);
    border: 1.5px solid var(--color-accent-light);
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition:
      background 0.18s var(--ease-out),
      color      0.18s,
      border-color 0.18s,
      transform  0.18s var(--ease-out),
      box-shadow 0.18s;
    letter-spacing: 0.01em;
  }
  .card-cart-btn:hover {
    background: var(--color-accent);
    color: #FFFFFF;
    border-color: var(--color-accent);
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(22, 163, 74, 0.28);
  }
  .card-cart-btn:active {
    transform: translateY(0) scale(0.98);
  }
</style>
