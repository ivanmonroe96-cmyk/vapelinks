      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.35rem 0;
      font-size: 0.85rem;
      color: var(--color-text-secondary);
    }
    .checkout-total-row {
      padding-top: 0.5rem;
    }
    .checkout-total-row span:first-child {
      font-size: 1rem;
      font-weight: 700;
      color: var(--color-text);
    }
