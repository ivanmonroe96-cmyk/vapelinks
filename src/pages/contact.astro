---
import Layout from '../layouts/Layout.astro';
import siteData from '../data/site.json';
---

<Layout title="Contact Us — Vapelink Australia | Melbourne Vape Shop" description="Get in touch with Vapelink Australia. Visit our shop in Coburg North, Melbourne, email us at info@vapelinks.com.au, or call 0451 085 862.">
  <Fragment slot="head">
    <meta name="keywords" content="contact vapelink, vape shop melbourne, coburg north vape store, vapelink phone, vapelink email, vapelink address" />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "name": "Contact Vapelink Australia",
      "description": "Get in touch with Vapelink Australia — visit our store, email, or call.",
      "url": "https://vapelinks.com.au/contact",
      "isPartOf": { "@type": "WebSite", "@id": "https://vapelinks.com.au/#website" },
      "about": {
        "@type": "Store",
        "name": "Vapelink Australia",
        "url": "https://vapelinks.com.au",
        "logo": "https://vapelinks.com.au/images/logo.svg",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "5/951 Sydney Rd",
          "addressLocality": "Coburg North",
          "addressRegion": "VIC",
          "postalCode": "3058",
          "addressCountry": "AU"
        },
        "telephone": "+61451085862",
        "email": "info@vapelinks.com.au",
        "openingHoursSpecification": [
          { "@type": "OpeningHoursSpecification", "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"], "opens": "10:30", "closes": "19:30" },
          { "@type": "OpeningHoursSpecification", "dayOfWeek": "Saturday", "opens": "10:30", "closes": "18:00" },
          { "@type": "OpeningHoursSpecification", "dayOfWeek": "Sunday", "opens": "10:30", "closes": "16:00" }
        ]
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://vapelinks.com.au/" },
          { "@type": "ListItem", "position": 2, "name": "Contact Us", "item": "https://vapelinks.com.au/contact" }
        ]
      }
    })} />
  </Fragment>

  <!-- Breadcrumb -->
  <nav class="breadcrumb-bar" aria-label="Breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg></li>
        <li><span class="breadcrumb-current">Contact Us</span></li>
      </ol>
    </div>
  </nav>

  <!-- Hero -->
  <section class="contact-hero">
    <div class="contact-hero-pattern"></div>
    <div class="container contact-hero-inner">
      <div class="contact-hero-badge">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
        We typically reply within 24 hours
      </div>
      <h1 class="font-display contact-hero-title">We'd Love to <span class="contact-hero-accent">Hear From You</span></h1>
      <p class="contact-hero-desc">Got a question, need product advice, or want to check on your order? We're real people and we're here to help — no bots, no scripts.</p>
    </div>
  </section>

  <!-- Contact Methods -->
  <section class="contact-methods">
    <div class="container">
      <div class="contact-grid">
        <!-- Visit Us -->
        <div class="contact-card">
          <div class="contact-card-accent visit"></div>
          <div class="contact-card-body">
            <div class="contact-card-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            </div>
            <h2 class="font-display contact-card-title">Visit Our Shop</h2>
            <p class="contact-card-text">Browse in person, get hands-on advice, and grab your gear same-day.</p>
            <div class="contact-card-info">
              <strong>5/951 Sydney Rd</strong><br />
              Coburg North, VIC 3058<br />
              Australia
            </div>
            <a href="https://maps.google.com/?q=5/951+Sydney+Rd+Coburg+North+VIC+3058+Australia" target="_blank" rel="noopener noreferrer" class="contact-card-action">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><path d="M15 3h6v6"/><path d="M10 14 21 3"/></svg>
              Get Directions
            </a>
          </div>
        </div>

        <!-- Email -->
        <div class="contact-card">
          <div class="contact-card-accent email"></div>
          <div class="contact-card-body">
            <div class="contact-card-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            </div>
            <h2 class="font-display contact-card-title">Email Us</h2>
            <p class="contact-card-text">Orders, products, returns — we usually reply within 24 hours on business days.</p>
            <div class="contact-card-info">
              <a href="mailto:info@vapelinks.com.au" class="contact-email-link">info@vapelinks.com.au</a>
            </div>
            <a href="mailto:info@vapelinks.com.au" class="contact-card-action">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              Send Email
            </a>
          </div>
        </div>

        <!-- Phone -->
        <div class="contact-card">
          <div class="contact-card-accent phone"></div>
          <div class="contact-card-body">
            <div class="contact-card-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            </div>
            <h2 class="font-display contact-card-title">Call Us</h2>
            <p class="contact-card-text">Need a quick answer? Give us a bell during business hours.</p>
            <div class="contact-card-info">
              <a href="tel:0451085862" class="contact-email-link">0451 085 862</a>
            </div>
            <a href="tel:0451085862" class="contact-card-action">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              Call Now
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Hours + Map Row -->
  <section class="contact-info-section">
    <div class="container">
      <div class="contact-info-grid">
        <!-- Hours -->
        <div class="contact-hours-card">
          <div class="contact-hours-header">
            <div class="contact-hours-icon">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            </div>
            <div>
              <h2 class="font-display contact-hours-title">Opening Hours</h2>
              <p class="contact-hours-subtitle">Our Coburg North store</p>
            </div>
          </div>
          <div class="contact-hours-table">
            <div class="contact-hours-row"><span>Monday – Friday</span><span class="contact-hours-time">10:30 AM – 7:30 PM</span></div>
            <div class="contact-hours-row"><span>Saturday</span><span class="contact-hours-time">10:30 AM – 6:00 PM</span></div>
            <div class="contact-hours-row"><span>Sunday</span><span class="contact-hours-time">10:30 AM – 4:00 PM</span></div>
            <div class="contact-hours-row"><span>Public Holidays</span><span class="contact-hours-time closed">Closed</span></div>
          </div>
          <p class="contact-hours-note">
            <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
            Online shop is always open — order 24/7.
          </p>
        </div>

        <!-- Map -->
        <div class="contact-map-card">
          <h2 class="font-display contact-map-title">Find Us</h2>
          <div class="contact-map-wrap">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.123456!2d144.963!3d-37.733!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad644b3c6cdbd2d%3A0x9b02a02b5d5cd5d0!2sVapelink!5e0!3m2!1sen!2sau!4v1700000000000!5m2!1sen!2sau"
              width="100%"
              height="280"
              style="border:0;border-radius:var(--radius-lg);"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Vapelink store location in Coburg North, Melbourne"
            ></iframe>
          </div>
          <div class="contact-map-address">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent)" stroke-width="2"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            <span>5/951 Sydney Rd, Coburg North VIC 3058</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="contact-form-section">
    <div class="container">
      <div class="contact-form-wrapper">
        <div class="contact-form-header">
          <span class="contact-section-label">Get in Touch</span>
          <h2 class="font-display contact-form-title">Send Us a Message</h2>
          <p class="contact-form-desc">Fill out the form below and we'll get back to you as soon as possible.</p>
        </div>
        <form id="contact-form" class="contact-form" novalidate>
          <div class="contact-form-row">
            <div class="contact-form-group">
              <label for="contact-name" class="contact-label">Name <span class="required">*</span></label>
              <input type="text" id="contact-name" name="name" placeholder="Your name" required class="contact-input" />
            </div>
            <div class="contact-form-group">
              <label for="contact-email" class="contact-label">Email <span class="required">*</span></label>
              <input type="email" id="contact-email" name="email" placeholder="you@example.com" required class="contact-input" />
            </div>
          </div>
          <div class="contact-form-group">
            <label for="contact-subject" class="contact-label">Subject</label>
            <select id="contact-subject" name="subject" class="contact-input">
              <option value="">Select a topic...</option>
              <option value="Order Enquiry">Order Enquiry</option>
              <option value="Product Question">Product Question</option>
              <option value="Returns & Refunds">Returns & Refunds</option>
              <option value="Shipping">Shipping</option>
              <option value="General">General</option>
            </select>
          </div>
          <div class="contact-form-group">
            <label for="contact-message" class="contact-label">Message <span class="required">*</span></label>
            <textarea id="contact-message" name="message" rows="5" placeholder="How can we help?" required class="contact-input contact-textarea"></textarea>
          </div>
          <div class="contact-form-footer">
            <button type="submit" class="btn-primary contact-submit-btn" id="contact-submit">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m22 2-7 20-4-9-9-4z"/><path d="m22 2-10 10"/></svg>
              Send Message
            </button>
            <span class="contact-form-hint">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
              Your information is safe and never shared.
            </span>
          </div>
          <div id="contact-success" class="contact-feedback success" style="display:none;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
            <span>Thanks for your message! We'll get back to you within 24 hours.</span>
          </div>
          <div id="contact-error" class="contact-feedback error" style="display:none;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 8v4"/><path d="M12 16h.01"/></svg>
            <span>Something went wrong. Please email us directly at info@vapelinks.com.au.</span>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="contact-cta-section">
    <div class="container">
      <div class="contact-cta-box">
        <div class="contact-cta-icon">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
        </div>
        <h2 class="font-display contact-cta-title">Looking for Something Specific?</h2>
        <p class="contact-cta-desc">Browse our full range or check out our FAQ for quick answers.</p>
        <div class="contact-cta-actions">
          <a href="/collections/shop" class="btn-primary contact-cta-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
            Shop Now
          </a>
          <a href="/faq" class="btn-secondary contact-cta-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/><path d="M12 17h.01"/></svg>
            View FAQ
          </a>
        </div>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = document.getElementById('contact-submit') as HTMLButtonElement;
    const successEl = document.getElementById('contact-success')!;
    const errorEl = document.getElementById('contact-error')!;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl.style.display = 'none';
      errorEl.style.display = 'none';

      const name = (document.getElementById('contact-name') as HTMLInputElement).value.trim();
      const email = (document.getElementById('contact-email') as HTMLInputElement).value.trim();
      const subject = (document.getElementById('contact-subject') as HTMLSelectElement).value;
      const message = (document.getElementById('contact-message') as HTMLTextAreaElement).value.trim();

      if (!name || !email || !message) {
        errorEl.querySelector('span')!.textContent = 'Please fill in all required fields.';
        errorEl.style.display = 'flex';
        return;
      }

      submitBtn.disabled = true;
      submitBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="spin"><circle cx="12" cy="12" r="10"/></svg> Sending...';

      try {
        const res = await fetch('/api/send-email', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            type: 'contact',
            data: { name, email, subject: subject || 'General Enquiry', message }
          })
        });

        if (!res.ok) {
          const errData = await res.json().catch(() => ({}));
          throw new Error(errData.error || 'Failed to send message');
        }

        successEl.style.display = 'flex';
        form.reset();
      } catch (err: any) {
        errorEl.querySelector('span')!.textContent = err.message || 'Something went wrong. Please try again or email us directly at info@vapelinks.com.au';
        errorEl.style.display = 'flex';
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m22 2-7 20-4-9-9-4z"/><path d="m22 2-10 10"/></svg> Send Message';
      }
    });
  </script>
</Layout>

<style is:global>
  .breadcrumb-bar { background: var(--color-surface); border-bottom: 1px solid var(--color-border); padding: 0.85rem 0; }
  .breadcrumb { display: flex; align-items: center; gap: 0.45rem; flex-wrap: wrap; font-size: 0.8rem; list-style: none; }
  .breadcrumb a { color: var(--color-text-secondary); text-decoration: none; transition: color 0.15s ease; }
  .breadcrumb a:hover { color: var(--color-accent); }
  .breadcrumb svg { color: var(--color-text-dim); }
  .breadcrumb-current { color: var(--color-text); font-weight: 500; }

  /* ── Hero ── */
  .contact-hero {
    position: relative;
    padding: 5rem 0 4rem;
    text-align: center;
    background: linear-gradient(180deg, #F0FDF4 0%, #DCFCE7 40%, var(--color-bg) 100%);
    border-bottom: 1px solid var(--color-border);
    overflow: hidden;
  }
  [data-theme="dark"] .contact-hero {
    background: linear-gradient(180deg, rgba(22,163,74,0.08) 0%, rgba(22,163,74,0.03) 40%, var(--color-bg) 100%);
  }
  .contact-hero-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(22,163,74,0.07) 1px, transparent 0);
    background-size: 32px 32px;
    pointer-events: none;
  }
  .contact-hero-inner { position: relative; z-index: 1; }
  .contact-hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.45rem 1rem;
    background: rgba(22,163,74,0.1);
    border: 1px solid rgba(22,163,74,0.2);
    border-radius: 100px;
    font-size: 0.78rem;
    font-weight: 600;
    color: var(--color-accent);
    margin-bottom: 1.25rem;
  }
  .contact-hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    letter-spacing: -0.03em;
    line-height: 1.15;
  }
  .contact-hero-accent {
    background: linear-gradient(135deg, var(--color-accent), #059669);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .contact-hero-desc {
    color: var(--color-text-secondary);
    font-size: 1.05rem;
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* ── Contact Cards ── */
  .contact-methods { padding: 3rem 0 2rem; }
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
  }
  @media (min-width: 768px) { .contact-grid { grid-template-columns: repeat(3, 1fr); } }

  .contact-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: border-color 0.25s ease, box-shadow 0.25s ease, transform 0.25s ease;
  }
  .contact-card:hover {
    border-color: rgba(22,163,74,0.3);
    box-shadow: 0 8px 32px rgba(22,163,74,0.08);
    transform: translateY(-3px);
  }
  .contact-card-accent {
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), #059669);
  }
  .contact-card-accent.visit { background: linear-gradient(90deg, #3b82f6, #2563eb); }
  .contact-card-accent.email { background: linear-gradient(90deg, var(--color-accent), #059669); }
  .contact-card-accent.phone { background: linear-gradient(90deg, #8b5cf6, #6d28d9); }
  .contact-card-body {
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  .contact-card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #F0FDF4, #DCFCE7);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    margin-bottom: 1rem;
  }
  [data-theme="dark"] .contact-card-icon {
    background: rgba(22,163,74,0.12);
  }
  .contact-card-title {
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  .contact-card-text {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    line-height: 1.65;
    margin-bottom: 1rem;
    flex: 1;
  }
  .contact-card-info {
    font-size: 0.88rem;
    color: var(--color-text);
    font-weight: 500;
    line-height: 1.55;
    margin-bottom: 1.25rem;
    padding: 0.85rem;
    background: var(--color-surface-alt);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }
  .contact-email-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.15s;
  }
  .contact-email-link:hover { color: var(--color-accent-hover); text-decoration: underline; }
  .contact-card-action {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-display);
    font-size: 0.82rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
    transition: gap 0.2s ease, color 0.15s;
  }
  .contact-card-action:hover { gap: 0.65rem; color: var(--color-accent-hover); }

  /* ── Hours + Map Grid ── */
  .contact-info-section { padding: 1rem 0 2.5rem; }
  .contact-info-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }
  @media (min-width: 640px) {
    .contact-info-grid { grid-template-columns: 1fr 1fr; }
  }

  .contact-hours-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 1.75rem;
  }
  .contact-hours-header {
    display: flex;
    align-items: center;
    gap: 0.85rem;
