---
import Layout from '../layouts/Layout.astro';
import siteData from '../data/site.json';
---

<Layout title="Contact Us — Vapelink Australia | Melbourne Vape Shop" description="Get in touch with Vapelink Australia. Visit our shop in Coburg North, Melbourne, email us at info@vapelinks.com.au, or call 0451 085 862.">
  <Fragment slot="head">
    <meta name="keywords" content="contact vapelink, vape shop melbourne, coburg north vape store, vapelink phone, vapelink email, vapelink address" />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "name": "Contact Vapelink Australia",
      "description": "Get in touch with Vapelink Australia — visit our store, email, or call.",
      "url": "https://vapelink.com.au/contact",
      "isPartOf": { "@type": "WebSite", "@id": "https://vapelink.com.au/#website" },
      "about": {
        "@type": "Store",
        "name": "Vapelink Australia",
        "url": "https://vapelink.com.au",
        "logo": "https://vapelink.com.au/images/logo.svg",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "5/951 Sydney Rd",
          "addressLocality": "Coburg North",
          "addressRegion": "VIC",
          "postalCode": "3058",
          "addressCountry": "AU"
        },
        "telephone": "+61451085862",
        "email": "info@vapelinks.com.au",
        "openingHoursSpecification": [
          { "@type": "OpeningHoursSpecification", "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"], "opens": "10:30", "closes": "19:30" },
          { "@type": "OpeningHoursSpecification", "dayOfWeek": "Saturday", "opens": "10:30", "closes": "18:00" },
          { "@type": "OpeningHoursSpecification", "dayOfWeek": "Sunday", "opens": "10:30", "closes": "16:00" }
        ]
      },
      "breadcrumb": {
        "@type": "BreadcrumbList",
        "itemListElement": [
          { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://vapelink.com.au/" },
          { "@type": "ListItem", "position": 2, "name": "Contact Us", "item": "https://vapelink.com.au/contact" }
        ]
      }
    })} />
  </Fragment>

  <!-- Breadcrumb -->
  <nav class="breadcrumb-bar" aria-label="Breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg></li>
        <li><span class="breadcrumb-current">Contact Us</span></li>
      </ol>
    </div>
  </nav>

  <!-- Hero -->
  <section class="contact-hero">
    <div class="container">
      <span class="section-label">Contact Us</span>
      <h1 class="font-display contact-hero-title">We'd Love to Hear From You</h1>
      <p class="contact-hero-desc">Got a question, need product advice, or want to check something about your order? We're here to help.</p>
    </div>
  </section>

  <!-- Contact Cards -->
  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Visit Us -->
        <div class="contact-card">
          <div class="contact-card-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
          </div>
          <h2 class="font-display contact-card-title">Visit Our Shop</h2>
          <p class="contact-card-text">Come see us in person — browse the range, get hands-on advice, and pick up your order same-day.</p>
          <div class="contact-card-info">
            <strong>5/951 Sydney Rd</strong><br />
            Coburg North, VIC 3058<br />
            Australia
          </div>
          <a href="https://maps.google.com/?q=5/951+Sydney+Rd+Coburg+North+VIC+3058+Australia" target="_blank" rel="noopener noreferrer" class="contact-card-btn">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><path d="M15 3h6v6"/><path d="M10 14 21 3"/></svg>
            Get Directions
          </a>
        </div>

        <!-- Email -->
        <div class="contact-card">
          <div class="contact-card-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          </div>
          <h2 class="font-display contact-card-title">Email Us</h2>
          <p class="contact-card-text">For order enquiries, product questions, returns, or anything else — we usually reply within 24 hours on business days.</p>
          <div class="contact-card-info">
            <a href="mailto:info@vapelinks.com.au" class="contact-email-link">info@vapelinks.com.au</a>
          </div>
          <a href="mailto:info@vapelinks.com.au" class="contact-card-btn">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            Send Email
          </a>
        </div>

        <!-- Phone -->
        <div class="contact-card">
          <div class="contact-card-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          </div>
          <h2 class="font-display contact-card-title">Call Us</h2>
          <p class="contact-card-text">Need a quick answer? Give us a bell during business hours and we'll do our best to help on the spot.</p>
          <div class="contact-card-info">
            <a href="tel:0451085862" class="contact-email-link">0451 085 862</a>
          </div>
          <a href="tel:0451085862" class="contact-card-btn">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            Call Now
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Opening Hours -->
  <section class="contact-section" style="padding-top:0;">
    <div class="container">
      <div class="contact-hours-card">
        <div class="contact-hours-left">
          <div class="contact-hours-icon">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
          </div>
          <div>
            <h2 class="font-display" style="font-size:1.15rem;font-weight:700;color:var(--color-text);margin-bottom:0.25rem;">Opening Hours</h2>
            <p style="font-size:0.82rem;color:var(--color-text-secondary);">Our Coburg North store hours</p>
          </div>
        </div>
        <div class="contact-hours-table">
          <div class="contact-hours-row">
            <span>Monday – Friday</span>
            <span class="contact-hours-time">10:30 AM – 7:30 PM</span>
          </div>
          <div class="contact-hours-row">
            <span>Saturday</span>
            <span class="contact-hours-time">10:30 AM – 6:00 PM</span>
          </div>
          <div class="contact-hours-row">
            <span>Sunday</span>
            <span class="contact-hours-time">10:30 AM – 4:00 PM</span>
          </div>
          <div class="contact-hours-row">
            <span>Public Holidays</span>
            <span class="contact-hours-time closed">Closed</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map -->
  <section class="contact-section" style="padding-top:0;">
    <div class="container">
      <div class="contact-map-card">
        <h2 class="font-display" style="font-size:1.1rem;font-weight:700;color:var(--color-text);margin-bottom:1rem;">Find Us</h2>
        <div class="contact-map-wrap">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.123456!2d144.963!3d-37.733!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad644b3c6cdbd2d%3A0x9b02a02b5d5cd5d0!2sVapelink!5e0!3m2!1sen!2sau!4v1700000000000!5m2!1sen!2sau"
            width="100%"
            height="320"
            style="border:0;border-radius:var(--radius-lg);"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Vapelink store location in Coburg North, Melbourne"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="contact-section" style="padding-top:0;">
    <div class="container">
      <div class="contact-form-card">
        <h2 class="font-display" style="font-size:1.2rem;font-weight:700;color:var(--color-text);margin-bottom:0.35rem;">Send Us a Message</h2>
        <p style="font-size:0.85rem;color:var(--color-text-secondary);margin-bottom:1.5rem;">Fill out the form below and we'll get back to you as soon as possible.</p>
        <form id="contact-form" class="contact-form" novalidate>
          <div class="contact-form-row">
            <div class="contact-form-group">
              <label for="contact-name" class="contact-label">Name <span class="required">*</span></label>
              <input type="text" id="contact-name" name="name" placeholder="Your name" required class="contact-input" />
            </div>
            <div class="contact-form-group">
              <label for="contact-email" class="contact-label">Email <span class="required">*</span></label>
              <input type="email" id="contact-email" name="email" placeholder="you@example.com" required class="contact-input" />
            </div>
          </div>
          <div class="contact-form-group">
            <label for="contact-subject" class="contact-label">Subject</label>
            <select id="contact-subject" name="subject" class="contact-input">
              <option value="">Select a topic...</option>
              <option value="Order Enquiry">Order Enquiry</option>
              <option value="Product Question">Product Question</option>
              <option value="Returns & Refunds">Returns & Refunds</option>
              <option value="Shipping">Shipping</option>
              <option value="General">General</option>
            </select>
          </div>
          <div class="contact-form-group">
            <label for="contact-message" class="contact-label">Message <span class="required">*</span></label>
            <textarea id="contact-message" name="message" rows="5" placeholder="How can we help?" required class="contact-input contact-textarea"></textarea>
          </div>
          <button type="submit" class="btn-primary contact-submit-btn" id="contact-submit">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m22 2-7 20-4-9-9-4z"/><path d="m22 2-10 10"/></svg>
            Send Message
          </button>
          <div id="contact-success" class="contact-feedback success" style="display:none;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
            <span>Thanks for your message! We'll get back to you within 24 hours.</span>
          </div>
          <div id="contact-error" class="contact-feedback error" style="display:none;">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 8v4"/><path d="M12 16h.01"/></svg>
            <span>Something went wrong. Please email us directly at info@vapelinks.com.au.</span>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="contact-cta-section">
    <div class="container">
      <div class="contact-cta-box">
        <h2 class="font-display" style="font-size:1.3rem;color:var(--color-text);margin-bottom:0.5rem;">Looking for Something Specific?</h2>
        <p style="color:var(--color-text-secondary);font-size:0.88rem;margin-bottom:1.25rem;">Browse our full range or check out our FAQ for quick answers.</p>
        <div style="display:flex;gap:0.75rem;flex-wrap:wrap;justify-content:center;">
          <a href="/collections/shop" class="btn-primary" style="padding:0.7rem 1.75rem;">Shop Now</a>
          <a href="/faq" class="btn-secondary" style="padding:0.7rem 1.75rem;">View FAQ</a>
        </div>
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = document.getElementById('contact-submit') as HTMLButtonElement;
    const successEl = document.getElementById('contact-success')!;
    const errorEl = document.getElementById('contact-error')!;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      successEl.style.display = 'none';
      errorEl.style.display = 'none';

      const name = (document.getElementById('contact-name') as HTMLInputElement).value.trim();
      const email = (document.getElementById('contact-email') as HTMLInputElement).value.trim();
      const subject = (document.getElementById('contact-subject') as HTMLSelectElement).value;
      const message = (document.getElementById('contact-message') as HTMLTextAreaElement).value.trim();

      if (!name || !email || !message) {
        errorEl.querySelector('span')!.textContent = 'Please fill in all required fields.';
        errorEl.style.display = 'flex';
        return;
      }

      submitBtn.disabled = true;
      submitBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="spin"><circle cx="12" cy="12" r="10"/></svg> Sending...';

      try {
        const res = await fetch('/api/send-email', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            type: 'contact',
            data: { name, email, subject: subject || 'General Enquiry', message }
          })
        });

        if (!res.ok) {
          const errData = await res.json().catch(() => ({}));
          throw new Error(errData.error || 'Failed to send message');
        }

        successEl.style.display = 'flex';
        form.reset();
      } catch (err: any) {
        errorEl.querySelector('span')!.textContent = err.message || 'Something went wrong. Please try again or email us directly at info@vapelinks.com.au';
        errorEl.style.display = 'flex';
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m22 2-7 20-4-9-9-4z"/><path d="m22 2-10 10"/></svg> Send Message';
      }
    });
  </script>
</Layout>

<style is:global>
  .breadcrumb-bar { background: var(--color-surface); border-bottom: 1px solid var(--color-border); padding: 0.85rem 0; }
  .breadcrumb { display: flex; align-items: center; gap: 0.45rem; flex-wrap: wrap; font-size: 0.8rem; list-style: none; }
  .breadcrumb a { color: var(--color-text-secondary); text-decoration: none; transition: color 0.15s ease; }
  .breadcrumb a:hover { color: var(--color-accent); }
  .breadcrumb svg { color: var(--color-text-dim); }
  .breadcrumb-current { color: var(--color-text); font-weight: 500; }

  .contact-hero {
    padding: 5rem 0 3.5rem;
    text-align: center;
    background: linear-gradient(180deg, #F0FDF4 0%, var(--color-bg) 100%);
    border-bottom: 1px solid var(--color-border);
  }
  .contact-hero-title {
    font-size: clamp(1.8rem, 4vw, 2.6rem);
    font-weight: 800;
    color: var(--color-text);
    margin-top: 0.35rem;
    margin-bottom: 0.65rem;
    letter-spacing: -0.02em;
  }
  .contact-hero-desc {
    color: var(--color-text-secondary);
    font-size: 1.05rem;
    max-width: 540px;
    margin: 0 auto;
    line-height: 1.65;
  }

  .contact-section { padding: 3rem 0; }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
  }
  @media (min-width: 768px) { .contact-grid { grid-template-columns: repeat(3, 1fr); } }

  .contact-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }
  .contact-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-md);
  }
  .contact-card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #F0FDF4, #DCFCE7);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    margin-bottom: 1rem;
  }
  .contact-card-title {
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }
  .contact-card-text {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
    flex: 1;
  }
  .contact-card-info {
    font-size: 0.88rem;
    color: var(--color-text);
    font-weight: 500;
    line-height: 1.55;
    margin-bottom: 1.25rem;
    padding: 0.85rem;
    background: var(--color-surface-alt);
    border-radius: var(--radius-md);
  }
  .contact-email-link {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.15s;
  }
  .contact-email-link:hover { color: var(--color-accent-hover); text-decoration: underline; }
  .contact-card-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-display);
    font-size: 0.82rem;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
    transition: gap 0.2s ease, color 0.15s;
  }
  .contact-card-btn:hover { gap: 0.6rem; color: var(--color-accent-hover); }

  /* Hours Card */
  .contact-hours-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 2rem;
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    max-width: 700px;
    margin: 0 auto;
  }
  .contact-hours-left {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
    min-width: 200px;
  }
  .contact-hours-icon {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #F0FDF4, #DCFCE7);
    border-radius: var(--radius-lg);
    color: var(--color-accent);
    flex-shrink: 0;
  }
  .contact-hours-table { flex: 1; }
  .contact-hours-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.55rem 0;
    border-bottom: 1px solid var(--color-border);
    font-size: 0.85rem;
    color: var(--color-text);
  }
  .contact-hours-row:last-child { border-bottom: none; }
  .contact-hours-time { font-weight: 600; color: var(--color-text-secondary); }
  .contact-hours-time.closed { color: #ef4444; font-weight: 700; }
  @media (max-width: 640px) {
    .contact-hours-card { flex-direction: column; gap: 1.25rem; }
    .contact-hours-left { min-width: auto; }
  }

  /* Map */
  .contact-map-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    max-width: 700px;
    margin: 0 auto;
  }
  .contact-map-wrap { border-radius: var(--radius-lg); overflow: hidden; }

  /* Form */
  .contact-form-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 2rem;
    max-width: 700px;
    margin: 0 auto;
  }
  .contact-form { display: flex; flex-direction: column; gap: 1rem; }
  .contact-form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  @media (min-width: 480px) { .contact-form-row { grid-template-columns: repeat(2, 1fr); } }
  .contact-form-group { display: flex; flex-direction: column; gap: 0.35rem; }
  .contact-label {
    font-size: 0.82rem;
    font-weight: 600;
    color: var(--color-text);
  }
  .contact-label .required { color: #ef4444; }
  .contact-input {
    padding: 0.65rem 0.85rem;
    font-size: 0.88rem;
    color: var(--color-text);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    transition: border-color 0.15s ease, box-shadow 0.15s ease;
    font-family: var(--font-body);
  }
  .contact-input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.12);
  }
  .contact-textarea { resize: vertical; min-height: 120px; }
  .contact-submit-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    align-self: flex-start;
    padding: 0.75rem 2rem;
    font-size: 0.88rem;
  }
  .contact-feedback {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.85rem 1rem;
    border-radius: var(--radius-md);
    font-size: 0.85rem;
    font-weight: 500;
  }
  .contact-feedback.success {
    background: #F0FDF4;
    color: #166534;
    border: 1px solid rgba(22, 163, 74, 0.25);
  }
  .contact-feedback.error {
    background: #FEF2F2;
    color: #991B1B;
    border: 1px solid rgba(239, 68, 68, 0.25);
  }
  .spin { animation: spin 1s linear infinite; }
  @keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }

  .contact-cta-section { padding: 0 0 4rem; }
  .contact-cta-box {
    background: linear-gradient(145deg, #F0FDF4 0%, #DCFCE7 100%);
    border: 1px solid rgba(22, 163, 74, 0.2);
    border-radius: var(--radius-xl);
    padding: 3rem 2rem;
    text-align: center;
    box-shadow: 0 4px 24px rgba(22, 163, 74, 0.08);
  }
</style>
