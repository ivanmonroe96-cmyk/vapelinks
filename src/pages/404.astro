---
import Layout from '../layouts/Layout.astro';

export const prerender = false;
---

<Layout title="Page Not Found â€“ Vapelink Australia" description="The page you're looking for doesn't exist." noindex={true}>
  <section class="error-page">
    <div class="container error-content">
      <div class="error-number font-display">
        4<span class="error-zero">0</span>4
      </div>
      <hr style="border:none;border-top:1px solid var(--color-border);max-width:160px;margin:1rem auto;" />
      <h2 class="font-display" style="font-size:1.35rem;font-weight:600;color:var(--color-text);margin-bottom:0.5rem;">Page Not Found</h2>
      <p style="color:var(--color-text-secondary);max-width:380px;margin:0 auto 2rem;line-height:1.7;font-size:0.92rem;">
        The page you're looking for doesn't exist or may have been moved.
      </p>
      <div style="display:flex;gap:0.6rem;justify-content:center;flex-wrap:wrap;">
        <a href="/" class="btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          Go Home
        </a>
        <a href="/collections/shop" class="btn-secondary">
          Browse Products
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .error-page {
    min-height: 55vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .error-content {
    text-align: center;
    animation: slide-up 0.4s var(--ease-out) both;
  }
  .error-number {
    font-size: clamp(5rem, 14vw, 9rem);
    font-weight: 800;
    color: var(--color-surface-alt);
    line-height: 1;
    letter-spacing: -0.04em;
  }
  .error-zero {
    color: var(--color-accent);
  }
</style>
