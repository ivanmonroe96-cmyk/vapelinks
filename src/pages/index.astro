---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import CollectionCard from '../components/CollectionCard.astro';
import siteData from '../data/site.json';
import productsRaw from '../data/products.json';
import disposableVapes from '../data/disposable-vapes.json';
const productsData = [...productsRaw, ...disposableVapes] as any[];
import collectionsData from '../data/collections.json';

const featuredProducts = productsData
  .filter((p: any) => p.images.length > 0)
  .slice(0, 8);

const topCollections = collectionsData
  .filter((c: any) => c.products_count > 5)
  .sort((a: any, b: any) => b.products_count - a.products_count)
  .slice(0, 6);

const saleProducts = productsData
  .filter((p: any) => {
    const v = p.variants[0];
    return v && v.compare_at_price && parseFloat(v.compare_at_price) > parseFloat(v.price);
  })
  .slice(0, 4);

const productTypes = [...new Set(productsData.map((p: any) => p.product_type).filter(Boolean))] as string[];
const vendors = [...new Set(productsData.map((p: any) => p.vendor).filter(Boolean))] as string[];
---

<Layout
  title="Vapelink — Australia's #1 Online Vape Shop | Buy Vapes Melbourne"
  description="Vapelink is a Melbourne-based vape shop stocking vape kits, disposable vapes, e-liquids, coils, pods & accessories from SMOK, Vaporesso, GeekVape and more. We ship Australia-wide with free delivery over $100."
>

  <!-- Structured Data: Organization + WebSite + SearchAction -->
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://vapelink.com.au/#organization",
          "name": "Vapelink Australia",
          "alternateName": "Vapelink",
          "url": "https://vapelink.com.au",
          "logo": {
            "@type": "ImageObject",
            "url": "https://vapelink.com.au/images/logo.svg",
            "width": 200,
            "height": 60
          },
          "description": "Melbourne-based online vape shop. Vape kits, disposable vapes, e-liquids, coils and accessories shipped Australia-wide.",
          "email": "info@vapelink.com.au",
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Coburg North",
            "addressRegion": "VIC",
            "addressCountry": "AU"
          },
          "areaServed": {
            "@type": "Country",
            "name": "Australia"
          }
        },
        {
          "@type": "WebSite",
          "@id": "https://vapelink.com.au/#website",
          "url": "https://vapelink.com.au",
          "name": "Vapelink Australia",
          "description": "Online vape shop based in Melbourne, Australia",
          "publisher": { "@id": "https://vapelink.com.au/#organization" },
          "potentialAction": {
            "@type": "SearchAction",
            "target": {
              "@type": "EntryPoint",
              "urlTemplate": "https://vapelink.com.au/search?q={search_term_string}"
            },
            "query-input": "required name=search_term_string"
          }
        },
        {
          "@type": "Store",
          "@id": "https://vapelink.com.au/#store",
          "name": "Vapelink Vape Shop",
          "image": "https://vapelink.com.au/images/logo.svg",
          "url": "https://vapelink.com.au",
          "email": "info@vapelink.com.au",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Coburg North",
            "addressLocality": "Melbourne",
            "addressRegion": "VIC",
            "postalCode": "3058",
            "addressCountry": "AU"
          },
          "geo": {
            "@type": "GeoCoordinates",
            "latitude": -37.7349,
            "longitude": 144.9632
          },
          "priceRange": "$$",
          "currenciesAccepted": "AUD",
          "paymentAccepted": "Bank Transfer, PayID, Bitcoin",
          "areaServed": "Australia"
        },
        {
          "@type": "BreadcrumbList",
          "itemListElement": [{
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://vapelink.com.au/"
          }]
        }
      ]
    })} />
  </Fragment>

  <!-- ═══ HERO ═══ -->
  <section class="hero">
    <div class="hero-bg">
      <img src="/images/hero-bg.jpg" alt="" loading="eager" fetchpriority="high" />
    </div>
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <div class="hero-badge">
        <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
        Melbourne-Based · Australia-Wide Shipping · Open 24/7
      </div>
      <h1 class="font-display hero-title">
        Australia's #1<br/>
        <span class="hero-accent">Online Vape Shop</span>
      </h1>
      <p class="hero-desc">
        {productsData.length.toLocaleString()}+ products — kits, disposables, e-liquids, coils & accessories. SMOK, Vaporesso, GeekVape and more. Free delivery on orders over $100.
      </p>
      <div class="hero-actions">
        <a href="/collections/shop" class="btn-primary" style="padding:0.9rem 2.25rem;font-size:0.95rem;border-radius:var(--radius-md);">
          Shop All Products
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
        <a href="/collections" class="hero-btn-outline">
          Browse Collections
        </a>
      </div>
      <div class="hero-brands">
        <span class="hero-brands-label">Trusted Brands</span>
        <div class="hero-brands-list">
          <span>SMOK</span>
          <span>Vaporesso</span>
          <span>GeekVape</span>
          <span>Voopoo</span>
          <span>Uwell</span>
          <span>Aspire</span>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ TRUST STRIP ═══ -->
  <section class="trust-strip">
    <div class="container">
      <div class="trust-grid">
        <div class="trust-item">
          <div class="trust-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/></svg>
          </div>
          <div class="trust-info">
            <span class="trust-number font-display">{productsData.length.toLocaleString()}</span>
            <span class="trust-label">Products In Stock</span>
          </div>
        </div>
        <div class="trust-sep"></div>
        <div class="trust-item">
          <div class="trust-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/><rect x="14" y="14" width="7" height="7" rx="1"/></svg>
          </div>
          <div class="trust-info">
            <span class="trust-number font-display">{topCollections.length}+</span>
            <span class="trust-label">Categories</span>
          </div>
        </div>
        <div class="trust-sep"></div>
        <div class="trust-item">
          <div class="trust-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><circle cx="12" cy="8" r="6"/><path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/></svg>
          </div>
          <div class="trust-info">
            <span class="trust-number font-display">{vendors.length}+</span>
            <span class="trust-label">Top Brands</span>
          </div>
        </div>
        <div class="trust-sep"></div>
        <div class="trust-item">
          <div class="trust-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
          </div>
          <div class="trust-info">
            <span class="trust-number font-display">MEL</span>
            <span class="trust-label">Melbourne Based</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ FEATURES STRIP ═══ -->
  <section class="features-section">
    <div class="container">
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon-wrap">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><rect x="1" y="3" width="15" height="13" rx="1"/><path d="M16 8h4l3 5v3h-7V8z"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
          </div>
          <div class="feature-content">
            <strong class="feature-title">Free Shipping</strong>
            <span class="feature-desc">On all orders over $99 across Australia</span>
          </div>
        </div>
        <div class="feature-card">
          <div class="feature-icon-wrap">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="m9 12 2 2 4-4"/></svg>
          </div>
          <div class="feature-content">
            <strong class="feature-title">100% Genuine</strong>
            <span class="feature-desc">Authentic products from authorised distributors</span>
          </div>
        </div>
        <div class="feature-card">
          <div class="feature-icon-wrap">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 1 0-16 0"/><path d="M12 13v2"/><path d="M12 17h.01"/></svg>
          </div>
          <div class="feature-content">
            <strong class="feature-title">Expert Support</strong>
            <span class="feature-desc">Real help from our knowledgeable team</span>
          </div>
        </div>
        <div class="feature-card">
          <div class="feature-icon-wrap">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
          </div>
          <div class="feature-content">
            <strong class="feature-title">Australia-Wide</strong>
            <span class="feature-desc">Fast dispatch from Melbourne every weekday</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ COLLECTIONS ═══ -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <div>
          <span class="section-label">Collections</span>
          <h2 class="font-display section-title">Shop by Category</h2>
        </div>
        <a href="/collections" class="section-link">
          View All
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
      <div class="collections-grid stagger-children">
        {topCollections.map((collection: any) => (
          <CollectionCard collection={collection} />
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ FEATURED PRODUCTS ═══ -->
  <section class="section section-alt">
    <div class="container">
      <div class="section-header">
        <div>
          <span class="section-label">Featured Products</span>
          <h2 class="font-display section-title">New Arrivals</h2>
        </div>
        <a href="/collections/shop" class="section-link">
          Shop All
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
      <div class="products-grid stagger-children">
        {featuredProducts.map((product: any) => (
          <ProductCard product={product} />
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ ON SALE ═══ -->
  {saleProducts.length > 0 && (
    <section class="section">
      <div class="container">
        <div class="section-header">
          <div style="display:flex;align-items:center;gap:0.75rem;">
            <span class="badge-sale" style="font-size:0.72rem;padding:0.3rem 0.75rem;">SALE</span>
            <div>
              <span class="section-label">Clearance</span>
              <h2 class="font-display section-title">On Sale</h2>
            </div>
          </div>
          <a href="/collections/all-clearance" class="section-link">
            View Clearance
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </a>
        </div>
        <div class="products-grid stagger-children">
          {saleProducts.map((product: any) => (
            <ProductCard product={product} />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- ═══ CATEGORIES / TAGS ═══ -->
  <section class="section section-alt">
    <div class="container" style="text-align:center;">
      <span class="section-label">Browse</span>
      <h2 class="font-display section-title" style="margin-bottom:1.75rem;">Product Types</h2>
      <div class="tags-cloud">
        {productTypes.sort().map((type: string) => (
          <a href="/collections/shop" class="tag-pill">{type}</a>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ ABOUT / CTA ═══ -->
  <section class="section">
    <div class="container">
      <div class="cta-card">
        <div class="cta-inner">
          <span class="section-label">About Vapelink</span>
          <h2 class="font-display" style="font-size:1.65rem;font-weight:700;color:var(--color-text);margin:0.5rem 0 0.75rem;">About Vapelink</h2>
          <p style="color:var(--color-text-secondary);line-height:1.8;max-width:560px;margin:0 auto 1rem;font-size:0.92rem;">
            We're a vape shop in Coburg North, Melbourne — been around since 2019. We stock {productsData.length.toLocaleString()}+ products from {vendors.length}+ brands, everything from starter kits and disposable vapes to e-liquids, coils, and accessories. If we don't have it, chances are it doesn't exist.
          </p>
          <p style="color:var(--color-text-secondary);line-height:1.8;max-width:560px;margin:0 auto 1.75rem;font-size:0.92rem;">
            You can pop into our Coburg North store or order online — we ship everywhere in Australia. Orders over $100 get free shipping. Not sure what you need? Drop us a line, we're happy to help.
          </p>
          <a href={`mailto:${siteData.contact_email}`} class="btn-primary" style="padding:0.75rem 2rem;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            Get in Touch
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ SEO CONTENT: Why Choose Vapelink ═══ -->
  <section class="section section-alt">
    <div class="container">
      <div class="seo-content">
        <h2 class="font-display" style="font-size:1.5rem;font-weight:700;color:var(--color-text);margin-bottom:1.5rem;text-align:center;">Why Shop With Us?</h2>
        <div class="seo-grid">
          <div class="seo-block">
            <h3 class="font-display" style="font-size:1rem;font-weight:600;color:var(--color-text);margin-bottom:0.5rem;">Massive Range — {productsData.length.toLocaleString()}+ Products</h3>
            <p>We carry a huge range of <a href="/collections/shop">vape gear</a>. <a href="/collections/all-vape-kits">Starter kits</a>, <a href="/pages/disposable-vapes-australia">disposable vapes</a>, e-liquids, coils, pods, mods — you name it, it's probably here. {vendors.length}+ brands all in one place.</p>
          </div>
          <div class="seo-block">
            <h3 class="font-display" style="font-size:1rem;font-weight:600;color:var(--color-text);margin-bottom:0.5rem;">Ships to Every State & Territory</h3>
            <p>We post from Melbourne to everywhere in Australia. Standard takes 3–7 business days, express is 1–3 days, or grab your order same-day with click & collect from our Coburg North shop. <strong>Free shipping on orders over $100.</strong> More details on our <a href="/pages/shipping-policy">shipping page</a>.</p>
          </div>
          <div class="seo-block">
            <h3 class="font-display" style="font-size:1rem;font-weight:600;color:var(--color-text);margin-bottom:0.5rem;">Only Genuine Gear</h3>
            <p>Everything we sell is legit — sourced straight from authorised distributors. SMOK, Vaporesso, GeekVape, Voopoo, Uwell, Aspire, Innokin, FreeMax, and plenty more. No fakes, no grey market stuff.</p>
          </div>
          <div class="seo-block">
            <h3 class="font-display" style="font-size:1rem;font-weight:600;color:var(--color-text);margin-bottom:0.5rem;">Actual Humans Who Vape</h3>
            <p>Got questions? We're vapers ourselves, so we actually know the products we sell. New to vaping, looking to upgrade, or just want a recommendation — <a href="/pages/contact-us">get in touch</a> or swing by the store.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ SEO: Location Pages ═══ -->
  <section class="section">
    <div class="container" style="text-align:center;">
      <span class="section-label">We Deliver Everywhere</span>
      <h2 class="font-display section-title" style="margin-bottom:1.75rem;">Vape Delivery Across Australia</h2>
      <div class="tags-cloud">
        <a href="/pages/about-us" class="tag-pill">Melbourne Vape Shop</a>
        <a href="/pages/sydney-vape-shop" class="tag-pill">Sydney Vape Shop</a>
        <a href="/pages/brisbane-vape-shop" class="tag-pill">Brisbane Vape Shop</a>
        <a href="/pages/perth-vape-shop" class="tag-pill">Perth Vape Shop</a>
        <a href="/pages/adelaide-vape-shop" class="tag-pill">Adelaide Vape Shop</a>
        <a href="/pages/gold-coast-vape-shop" class="tag-pill">Gold Coast Vape Shop</a>
        <a href="/pages/newcastle-vape-shop" class="tag-pill">Newcastle Vape Shop</a>
        <a href="/pages/frankston-vape-shop" class="tag-pill">Frankston Vape Shop</a>
        <a href="/pages/craigieburn-vape-shop" class="tag-pill">Craigieburn Vape Shop</a>
        <a href="/pages/broadmeadows-vape-shop" class="tag-pill">Broadmeadows Vape Shop</a>
        <a href="/pages/preston-vape-shop" class="tag-pill">Preston Vape Shop</a>
        <a href="/pages/reservoir-vape-shop" class="tag-pill">Reservoir Vape Shop</a>
        <a href="/pages/northcote-vape-shop" class="tag-pill">Northcote Vape Shop</a>
        <a href="/pages/brunswick-vape-shop" class="tag-pill">Brunswick Vape Shop</a>
        <a href="/pages/fawkner-vape-shop" class="tag-pill">Fawkner Vape Shop</a>
        <a href="/pages/glenroy-vape-shop" class="tag-pill">Glenroy Vape Shop</a>
        <a href="/pages/thomastown-vape-shop" class="tag-pill">Thomastown Vape Shop</a>
        <a href="/pages/pakenham-vape-shop" class="tag-pill">Pakenham Vape Shop</a>
      </div>
    </div>
  </section>

</Layout>

<style>
  /* ── Hero ── */
  .hero {
    position: relative;
    padding: 8.5rem 0 7.5rem;
    overflow: hidden;
    min-height: 680px;
    display: flex;
    align-items: center;
  }
  @media (max-width: 640px) {
    .hero {
      padding: 5rem 0 4.5rem;
      min-height: 520px;
    }
    .hero-title { font-size: 2.2rem; }
    .hero-desc { font-size: 0.92rem; }
    .hero-actions { flex-direction: column; align-items: center; }
    .hero-actions .btn-primary,
    .hero-actions .hero-btn-outline { width: 100%; max-width: 300px; justify-content: center; }
    .hero-brands { flex-direction: column; gap: 0.5rem; }
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background:
      radial-gradient(ellipse at 15% 55%, rgba(22, 163, 74, 0.25) 0%, transparent 55%),
      radial-gradient(ellipse at 85% 20%, rgba(96, 165, 250, 0.12) 0%, transparent 45%),
      linear-gradient(105deg, rgba(4, 9, 25, 0.95) 0%, rgba(8, 20, 55, 0.88) 35%, rgba(12, 30, 70, 0.72) 65%, rgba(8, 16, 45, 0.75) 100%);
  }
  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    animation: slide-up 0.5s var(--ease-out) both;
  }
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-display);
    font-size: 0.72rem;
    font-weight: 700;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    color: #93C5FD;
    background: rgba(22, 163, 74, 0.18);
    padding: 0.5rem 1.2rem;
    border-radius: var(--radius-full);
    border: 1px solid rgba(96, 165, 250, 0.35);
    margin-bottom: 1.5rem;
    backdrop-filter: blur(8px);
  }
  .hero-title {
    font-size: clamp(2.4rem, 6vw, 4.2rem);
    font-weight: 800;
    color: #ffffff;
    line-height: 1.05;
    margin-bottom: 1.35rem;
    letter-spacing: -0.03em;
    text-shadow: 0 4px 32px rgba(0,0,0,0.45);
  }
  .hero-accent {
    background: linear-gradient(135deg, #93C5FD 0%, #60A5FA 50%, #38BDF8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .hero-desc {
    font-size: 1.05rem;
    color: rgba(255, 255, 255, 0.85);
    max-width: 520px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }
  .hero-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .hero-btn-outline {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.9rem 2rem;
    font-family: var(--font-display);
    font-size: 0.95rem;
    font-weight: 600;
    color: #ffffff;
    background: rgba(255, 255, 255, 0.08);
    border: 1.5px solid rgba(255, 255, 255, 0.22);
    border-radius: var(--radius-md);
    text-decoration: none;
    cursor: pointer;
    transition: background 0.2s ease, border-color 0.2s ease, transform 0.2s var(--ease-out);
