---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import productsRaw from '../data/products.json';
import disposableVapes from '../data/disposable-vapes.json';
const productsData = [...productsRaw, ...disposableVapes] as any[];

const url = Astro.url;
const query = url.searchParams.get('q')?.toLowerCase() || '';

const results = query
  ? productsData.filter((p: any) => {
      const searchable = [
        p.title,
        p.vendor,
        p.product_type,
        p.body_html?.replace(/<[^>]*>/g, ''),
        ...(p.tags || []),
      ].join(' ').toLowerCase();
      return searchable.includes(query);
    })
  : [];
---

<Layout title={query ? `Search: ${query} – Vapelink Australia` : 'Search – Vapelink Australia'} description="Search for vape products, e-liquids, kits and accessories at Vapelink Australia." noindex={true}>

  <!-- Header -->
  <section class="search-header">
    <div class="container">
      <span class="section-label">Search</span>
      <h1 class="font-display" style="font-size:1.75rem;font-weight:700;color:var(--color-text);margin:0.3rem 0 1.25rem;">Find Products</h1>
      <form action="/search" method="get" class="search-form-full">
        <div class="search-input-wrap">
          <svg class="search-icon-lg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
          <input
            type="text"
            name="q"
            value={query}
            placeholder="Search for products, brands, categories..."
            class="search-input-lg"
            autofocus
          />
          <button type="submit" class="btn-primary" style="padding:0.55rem 1.25rem;font-size:0.82rem;border-radius:var(--radius-sm);">
            Search
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- Results -->
  <section class="container" style="padding:2rem 0 4rem;">
    {query ? (
      <>
        <p style="font-size:0.82rem;color:var(--color-text-muted);margin-bottom:1.5rem;">
          {results.length} result{results.length !== 1 ? 's' : ''} for "<span style="color:var(--color-text);font-weight:500;">{query}</span>"
        </p>
        {results.length > 0 ? (
          <div class="products-grid">
            {results.slice(0, 48).map((product: any) => (
              <ProductCard product={product} />
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <div class="empty-icon">
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-dim)" stroke-width="1.5"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
            </div>
            <h3 class="font-display" style="font-size:1.15rem;color:var(--color-text);margin-bottom:0.4rem;">No results found</h3>
            <p style="color:var(--color-text-secondary);margin-bottom:1.25rem;font-size:0.9rem;">Try different keywords or browse our collections.</p>
            <a href="/collections" class="btn-secondary">Browse Collections</a>
          </div>
        )}
      </>
    ) : (
      <div class="empty-state">
        <div class="empty-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-dim)" stroke-width="1.5"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
        </div>
        <p style="color:var(--color-text-secondary);font-size:0.95rem;">Enter a search term to find products.</p>
      </div>
    )}
  </section>
</Layout>

<style>
  .search-header {
    background: linear-gradient(180deg, var(--color-surface) 0%, var(--color-bg) 100%);
    border-bottom: 1px solid var(--color-border);
    padding: 3rem 0 2.5rem;
  }

  .search-form-full { max-width: 640px; }
  .search-input-wrap {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    background: var(--color-surface);
    border: 1.5px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 0.5rem 0.5rem 0.5rem 1.25rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    box-shadow: var(--shadow-sm);
  }
  .search-input-wrap:focus-within {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 4px var(--color-accent-light), var(--shadow-sm);
  }
  .search-icon-lg {
    color: var(--color-text-muted);
    flex-shrink: 0;
  }
  .search-input-lg {
    flex: 1;
    background: none;
    border: none;
    outline: none;
    color: var(--color-text);
    font-size: 0.95rem;
    font-family: var(--font-body);
    padding: 0.4rem 0;
  }
  .search-input-lg::placeholder { color: var(--color-text-muted); }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  @media (min-width: 768px) { .products-grid { grid-template-columns: repeat(3, 1fr); gap: 1.1rem; } }
  @media (min-width: 1024px) { .products-grid { grid-template-columns: repeat(4, 1fr); } }

  .empty-state {
    text-align: center;
    padding: 4rem 0;
  }
  .empty-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 1.25rem;
    border-radius: var(--radius-lg);
    background: var(--color-surface-alt);
    border: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
